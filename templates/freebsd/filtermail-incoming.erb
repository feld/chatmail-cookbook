#!/bin/sh
#
# PROVIDE: filtermail_incoming
# REQUIRE: LOGIN
# BEFORE: postfix
# KEYWORD: shutdown

. /etc/rc.subr

name="filtermail_incoming"
rcvar="filtermail_incoming_enable"

load_rc_config $name

: ${filtermail_incoming_enable:="NO"}
: ${filtermail_svc_user:="vmail"}
: ${chatmail_config:="<%= @config_path %>"}

required_files="${chatmail_config}"
pidfile="/var/run/${name}.pid"
command="/usr/sbin/daemon"
command_args=" -T ${name} -p ${pidfile} -u ${filtermail_svc_user} -f <%= @execpath %> ${chatmail_config} incoming"

# Override /etc/rc.subr variant because we do not
# care about procname matching and we want to be
# able to handle the Python to Rust filtermail
# transition gracefully.
check_pidfile()
{
	if [ -f $pidfile ]; then
	    read _pid _junk < $pidfile
	    echo $_pid
	else
	    echo ""
	fi
}

run_rc_command "$1"
