#!/bin/sh
#
# PROVIDE: chatmail_metadata
# REQUIRE: LOGIN
# KEYWORD: shutdown

. /etc/rc.subr

name="chatmail_metadata"
rcvar="chatmail_metadata_enable"

load_rc_config $name

: ${chatmail_metadata_enable:="YES"}
: ${chatmail_svc_user:="vmail"}
: ${chatmail_config:="<%= @config_path %>"}

required_files="${chatmail_config}"
procname="*python*"
pidfile="/var/run/${name}/${name}.pid"
command="/usr/sbin/daemon"
command_args=" -T ${name} -P ${pidfile} -u ${chatmail_svc_user} -r -f <%= @execpath %> /var/run/${name}/metadata.sock ${chatmail_config}"

start_precmd="install -d -o ${chatmail_svc_user} -g ${chatmail_svc_user} -m 755 /var/run/${name}"

run_rc_command "$1"
